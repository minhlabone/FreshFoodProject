<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FBB00"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/eat"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/eat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="FRESH FOOD"
        android:textSize="50sp"
        android:textStyle="italic"
        android:textColor="@color/white"

        android:id="@+id/foodready"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eat"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
     />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_splash"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodready"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:background="@drawable/white_background"
            android:text="Dùng Thử App"
            android:textSize="18sp"
            android:id="@+id/btngetinstand"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
        <Button
            android:background="@drawable/white_background"
            android:text="Đăng Nhập"
            android:textSize="18sp"
            android:id="@+id/btngetdangnhap"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Nếu chưa có tài khoản"
            android:textColor="#01A787"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/white_background"
            android:text="Đăng Kí"
            android:textSize="18sp"
            android:id="@+id/btngetdangky"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>