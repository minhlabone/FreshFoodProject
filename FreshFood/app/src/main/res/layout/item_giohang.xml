<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      <LinearLayout
          android:padding="10dp"
          android:background="@drawable/white_background"
          android:orientation="horizontal"
          android:weightSum="10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/item_giohang_image"
              android:scaleType="centerCrop"
              android:src="@drawable/iconnew"
              android:layout_width="100dp"
              android:layout_height="100dp"/>
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
           <TextView
               android:id="@+id/item_giohang_tensp"
               android:text="Tên Sản Phẩm"
               android:layout_marginLeft="10dp"
               android:textSize="18sp"
               android:textStyle="bold"
               android:textColor="#08BF9B"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
              <LinearLayout
                  android:layout_marginTop="10dp"
                  android:weightSum="18"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:textStyle="bold"
                      android:id="@+id/item_giohang_gia"
                      android:text="Số lượng"
                      android:layout_marginLeft="10dp"
                      android:textColor="#08BF9B"
                      android:layout_weight="5"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>
                  <ImageView

                      android:src="@drawable/baseline_remove_24"
                      android:id="@+id/item_giohang_tru"
                      android:layout_weight="2"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/item_giohang_soluong"
                      android:text="1"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:layout_weight="2"
                      android:gravity="center"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>
                  <ImageView
                      android:src="@drawable/baseline_add_24"
                      android:id="@+id/item_giohang_cong"
                      android:layout_weight="2"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>
                  <ImageView
                      android:src="@drawable/baseline_drag_handle_24"
                      android:layout_weight="2"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/item_giohang_giasp2"
                      android:text="150000 đ"
                      android:gravity="center|center_vertical"
                      android:layout_weight="5"
                      android:textColor="#08BF9B"
                      android:textStyle="bold"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>
              </LinearLayout>
              <CheckBox
                  android:padding="5dp"
                  android:layout_marginLeft="10dp"
                  android:id="@+id/item_giohang_check"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
      </LinearLayout>
</androidx.cardview.widget.CardView>